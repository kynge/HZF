<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape >
            <gradient android:centerColor="#ededed" android:endColor="#cccccc" android:startColor="#ededed" android:centerY="0.95" android:angle="270"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:centerColor="#eb7f6e" android:endColor="#a52a2a" android:startColor="#eb7f6e" android:centerY="0.95" android:angle="270"/>
        </shape>       
    </item>
</selector>