<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bkground_img"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_layout"
        layout="@layout/common_title_layout" />

    <!-- 手机号码 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/tv_phone_num"
            style="@style/login_text_style_one"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="bottom|left"
            android:text="@string/phone_num2" />

        <TextView
            android:id="@+id/tv_phone_num_value"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10.0dip"
            android:layout_toRightOf="@id/tv_phone_num"
            android:background="@android:color/transparent"
            android:gravity="bottom|right"
            android:maxLength="20"
			style="@style/et_login_et_style2"            
            />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/input_frame_selector" />
    </RelativeLayout>

    <!-- 充值金额 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/tv_recharge_money2"
            style="@style/login_text_style_one"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="bottom|left"
            android:text="@string/recharge_money2" />

        <TextView
            android:id="@+id/tv_recharge_money2_value"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10.0dip"
            android:layout_toRightOf="@id/tv_recharge_money2"
            android:background="@android:color/transparent"
            android:gravity="bottom|right"
            android:maxLength="20"
			style="@style/et_login_et_style2"   
             />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/input_frame_selector" />
    </RelativeLayout>
    <!-- 银行卡号 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/tv_bank_card_num2"
            style="@style/login_text_style_one"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="bottom|left"
            android:text="@string/bank_card_num2" />

        <EditText
            android:id="@+id/ev_bank_card_num2_value"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10.0dip"
            android:layout_toRightOf="@id/tv_bank_card_num2"
            android:background="@android:color/transparent"
            android:gravity="bottom|right"
            android:hint="@string/bank_card_num2_hint"
            android:singleLine="true"
            android:maxLength="19"
            style="@style/et_login_et_style2"
         	android:inputType="number"
            />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/input_frame_selector" />
    </RelativeLayout>
    <!-- 支付密码 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/tv_pay_pwd2"
            style="@style/login_text_style_one"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="bottom|left"
            android:text="@string/pay_pwd2" />

        <EditText
            android:id="@+id/et_pay_pwd2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10.0dip"
            android:layout_toRightOf="@id/tv_pay_pwd2"
            android:background="@android:color/transparent"
            android:gravity="bottom|right"
            android:hint="@string/pay_pwd2_hint"
            android:maxLength="20"
            android:singleLine="true"
            style="@style/et_login_et_style2"
            android:inputType="textPassword"
            />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/input_frame_selector" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		<!-- 取消 -->
        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="53dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:background="@drawable/long_button_selector"
            android:gravity="center"
            android:text="@string/btn_pay_cancle_txt"
            android:textColor="@color/g999999"
            android:textSize="16sp" />

        <!-- 确认 -->
        <Button
            android:id="@+id/btn_sure"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="53dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:background="@drawable/long_button_selector"
            android:gravity="center"
            android:text="@string/btn_pay_sure_txt"
            android:textColor="@color/g999999"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>